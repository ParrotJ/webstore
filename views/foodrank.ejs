<% include header %>

<div class="wrap">
	<% for (i in food) { %>
	<div class="row">
		<div id="<%= i %>" class="card" style="padding: 1rem 1.5rem">
			<div class="left" style="width: 50%;">
				<sapn class="card-title grey-text text-darken-4"><%= food[i].tbNum %></sapn>
			</div>
			<div class="right" style="width: 50%;">
				<span class="num"><%= food[i].time %></span>
				<span>수량 : <b class="price"><%= food[i].amount %></b></span>
			</div>
		</div>
	</div>
	<% } %>
</div>

	<nav class="foot blue">
		<a href="#" class="brand-logo left modal-trigger">주문 완료</a>
	</nav>

  	<script>
	$(document).ready(function(){
	    //setTimeout("history.go(0);",5000);

		$(".card").click(function(){
			var id = $(this).attr("id");
			var url = location.origin+'/del?target=food&id='+id;

			$.get(url, function(res) {
			 	location.reload();
			});
		});

		$('nav').click(function(){
			var id = $('#0');

			if (id != 'undefinded'){
				var url = location.origin+'/del?target=food&id='+0;

				$.get(url, function(res) {
				 	location.reload();
				});
			}
			
		});
	});
	</script>
<% include footer %>