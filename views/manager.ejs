<% include header %>

<nav class="top blue">
  <a href="#" class="brand-logo right" style="margin-right: 2rem">총계 : <sapn id="sum"></span>w</a>
</nav>

<div style="margin: 0 1rem">
  <table class="spider">
  <thead>
    <tr>
        <th data-field="TbNum">테이블 번호</th>
        <th data-field="Order">주문 내역</th>
        <th data-field="SumVal">주문 금액</th>
        <th data-field="Time">시간</th>
    </tr>
  </thead>

  <tbody>
    <% for (var i=manager.length-1; i >= 0; i--) { %>
    <tr class='data'>
        <td><%= manager[i].TbNum %></td>
        <td><%- manager[i].Order %></td>
        <td id='val'><%= manager[i].Sum %></td>
        <td><%= manager[i].Time %></td>
    </tr>
    <% } %>
  </tbody>
  </table>
</div>


<script>
  $(document).ready(function(){
    setTimeout("history.go(0);",5000);
    
    var sum = 0;
    $('.data').each(function(){
      sum += $(this).children('#val').html()*1;
    });
    $('#sum').html(sum);
  });
</script>

